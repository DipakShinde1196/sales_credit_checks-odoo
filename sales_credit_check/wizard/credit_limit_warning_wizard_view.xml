<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_credit_limit_warning_wizard" model="ir.ui.view">
        <field name="name">credit.limit.warning.wizard.form</field>
        <field name="model">credit.limit.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Credit Limit Not Set">
                <div class="text-center mt-3">
                    <i class="fa fa-exclamation-triangle text-warning" style="font-size: 4rem;" role="img"
                       aria-label="Warning" title="Warning"/>
                    <h3 class="mt-3 mb-2">Missing Credit Limit</h3>
                    <p class="text-muted mb-4" style="font-size: 1.1rem;">
                        The credit limit for
                        <field name="partner_id" readonly="1" class="fw-bold text-dark"/>
                        is currently <strong>not set</strong>.
                        <br/>Would you like to configure it now to prevent invoicing blocks?
                    </p>
                </div>
                <footer>
                    <button name="action_yes"
                            string="Yes"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_no"
                            string="No"
                            type="object"
                            class="btn-secondary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-link btn-outline-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
